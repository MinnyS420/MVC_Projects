@model OrderDetailsViewModel

<!DOCTYPE html>
<html>
<head>
    <title>Edit Order</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h3 class="mb-4">Edit Order:</h3>

        <div class="row">
            <div class="col-md-6">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="FullName">Customer Name:</label>
                        <input type="text" asp-for="FullName" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Address">Customer Address:</label>
                        <input type="text" asp-for="Address" class="form-control" />
                    </div>
                    <div class="form-group form-check">
                        <input asp-for="IsDelivered" type="checkbox" class="form-check-input" />
                        <label asp-for="IsDelivered" class="form-check-label">Is Delivered</label>
                    </div>
                    <div class="form-group">
                        <label asp-for="LocationId">Location:</label>
                        <select asp-for="LocationId" class="form-control" asp-items="@(new SelectList(ViewBag.Locations, "Id", "Name"))"></select>
                    </div>
                    <button type="submit" class="btn btn-success">Update</button>
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS and jQuery (for dropdowns, modals, etc.) -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
